.line
  span Address:
  input.eventInput(id='venueAddressInput', type = 'text')
  span.requiredFieldSymbol *
.line
  span Google Maps Url:
  input.eventInput(id='googleMapsUrlInput', type = 'text')
.line
  span Website:
  input.eventInput(id='venueWebsiteInput', type = 'text')
.line
  span Instagram:
  input.eventInput(id='venueInstagramInput', type = 'text')
.line
  span Is Published:
  input.eventInput(id='isPublishedInput', type = 'text', maxlength = 1)
.line
  span Is Presenter Signup Only:
  input.eventInput(id='isPresenterSignupOnlyInput', type = 'text', maxlength = 1)
.line
  span Is Attendee Signup Only:
  input.eventInput(id='isAttendeeSignupOnlyInput', type = 'text', maxlength = 1)
