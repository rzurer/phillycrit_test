.line
  span Date:
  select.datePartSelect.startDatePart(id='yearSelect')
  select.datePartSelect.startDatePart(id='monthSelect')
  select.datePartSelect.startDatePart(id='daySelect')
  span Start Time:
  select.datePartSelect.startDatePart(id='startHourSelect')
  select.datePartSelect.startDatePart(id='startMinuteSelect')
  select.datePartSelect.startDatePart(id='startAmPmSelect')
