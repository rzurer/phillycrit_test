  select.datePartSelect.endDatePart(id='endHourSelect')
  select.datePartSelect.endDatePart(id='endMinuteSelect')
  select.datePartSelect.endDatePart(id='endAmPmSelect')
.line
  span Event Id:
  input#eventIdHidden(type = 'text')
.line
  span Venue:
  input.eventInput(id='venueInput', type = 'text')
